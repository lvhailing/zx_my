<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/right_bottom_view">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_item"
        android:layout_centerHorizontal="true"
        android:text="我的待阅"
        android:textColor="@color/zfb_gray_bg_color"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/num_bg_less"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_del_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/del_item"
        android:visibility="gone"/>

</RelativeLayout>
