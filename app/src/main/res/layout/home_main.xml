                android:textColor="@color/zfb_gray_bg_color"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_3"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_zgs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_selector" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tab"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/home_zgs_normal3"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="32dp"
                android:text="子公司动态"
                android:textColor="@color/zfb_gray_bg_color"
                android:textSize="10sp" />

            <TextView
