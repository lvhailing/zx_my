                android:textColor="@color/zfb_gray_bg_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_coffe"
                android:layout_width="30dp"
                android:layout_height="13dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/icon_new"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="10sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_selector" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tab"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/home_info_normal2"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="32dp"
                android:text="通知公告"
                android:textColor="@color/zfb_gray_bg_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="30dp"
                android:layout_height="13dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/icon_new"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="10sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2"
        android:gravity="center_vertical"
