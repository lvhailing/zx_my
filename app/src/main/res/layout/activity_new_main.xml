<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="fill_parent"
            android:layout_height="52.0dip"
            android:background="@color/main_red_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="60dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="中信资产OA办公系统"
                android:textColor="#fff"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/loginout"/>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_top"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_btm"
            android:layout_width="match_parent"
            android:layout_height="166dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="#f4f6f8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bg_c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/viewpager_bg_circle1"/>

                <ImageView
                    android:id="@+id/iv_bg_c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/viewpager_bg_circle2"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="资产公司动态"
                android:textColor="@color/main_red_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:padding="5dp"
                android:text="更多"
                android:textColor="@color/main_red_color"
                android:textSize="12sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8"/>

        <!--<com.my.zx.widegt.MyListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>-->
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_list_selector"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main_black_color"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right"/>

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_title1"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_content1"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_content1"
                android:layout_marginTop="15dp"
                android:background="#EDEDED"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_list_selector"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main_black_color"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right"/>

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_title2"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_content2"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_content2"
                android:layout_marginTop="15dp"
                android:background="#EDEDED"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_list_selector"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main_black_color"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right"/>

            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_title3"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_content3"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_content3"
                android:layout_marginTop="15dp"
                android:background="#EDEDED"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_item_list_selector"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main_black_color"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right"/>

            <TextView
                android:id="@+id/tv_content4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title4"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_title4"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_content4"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="12sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_content4"
                android:layout_marginTop="15dp"
                android:background="#EDEDED"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
