<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="52.0dip"
        android:background="@color/main_red_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="中信资产OA办公系统"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="注销"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_title" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_dai_ban"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_daiban_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="我的待办"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_dai_ban"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_dai_yue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_daiyue_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="我的待阅"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_dai_yue"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_phone_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="通讯录"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_qiang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_qiang_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="强哥心语"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_qiang"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_coffe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_coffe_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="强哥coffee time"
                        android:textColor="@color/main_red_color"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_coffe"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_info_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="通知公告"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_zichan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_zichan_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="资产动态"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_zichan"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_boss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_boss_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="领导动态"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_boss"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_email_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="电子邮件"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_zgs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_zgs_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="子公司动态"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_zgs"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fgs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_fgs_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="分公司动态"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_fgs"
                        android:layout_width="30dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/icon_new"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="10sp" 
                        android:visibility="invisible"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_change"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_selector" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tab"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/home_change_normal"
                        android:gravity="center_horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="50dp"
                        android:text="修改密码"
                        android:textColor="@color/main_red_color"
                        android:textSize="11sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>